<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= content_for?(:title) ? yield(:title) : "Tis Project" %></title>
        <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Tis Project" %>">
        <%= stylesheet_link_tag "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= stylesheet_link_tag "http://code.jquery.com/mobile/latest/jquery.mobile.min.css", :media => "all" %>
        <%= javascript_include_tag "http://code.jquery.com/mobile/latest/jquery.mobile.min.js" %>
        <%= csrf_meta_tags %>
        <%= yield(:head) %>
    </head>
    <body class="<%= controller_name %> <%= action_name %>">
        <div id="container" class="container">
            <header>
                <%= render 'layouts/navigation' %>
                <%= render 'layouts/messages' %>
            </header>
            <div id="main" role="main">
                <%= yield %>
            </div>
            <footer></footer>
        </div>
        <!--! end of #container -->
    </body>
</html>
