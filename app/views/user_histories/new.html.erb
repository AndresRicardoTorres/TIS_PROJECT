
<h1>New user_history</h1>

<% render 'form' %>

<%= form_for([@project, @user_history]) do |f| %>
	<% if @user_history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_history.errors.count, "error") %> prohibited this user_history from being saved:</h2>
      <ul>
      <% @user_history.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ui-body ui-body-b">
    <fieldset class="ui-grid-a">
      <div class="ui-block-a"><div data-mini="true"><%= f.label :name %><%= f.text_field :name %></div></div>
      <div class="ui-block-c"><div data-mini="true"><%= f.label :actors %><%= f.text_field :actors %></div></div>
      <div class="ui-block-a"><div data-mini="true"><%= f.label :priotity %><%= f.number_field :priotity %></div></div>
      <div class="ui-block-c"><div data-mini="true"><%= f.label :iteration %><%= f.text_field :iteration %></div></div>			
    </fieldset>
    <fieldset class="ui-grid-solo">
      <div class="ui-block-a"><div data-mini="true"><%= f.label :dependence %></div></div>
      <div class="ui-block-a"><div data-mini="true"><%= f.text_field :dependence %></div></div>
    </fieldset>
    <fieldset class="ui-grid-solo">
      <div class="ui-block-a"><div data-mini="true"><%= f.label :description %></div></div>
      <div class="ui-block-a"><div data-mini="true"><%= f.text_area :description %></div></div>
    </fieldset>
    <fieldset class="ui-grid-solo">
      <div class="ui-block-a"><div data-mini="true"><%= f.label :comments %></div></div>
      <div class="ui-block-a"><div data-mini="true"><%= f.text_area :comments %></div></div>
    </fieldset>
    <fieldset class="ui-grid-a">
      <div class="ui-block-a"><div data-mini="true"><%= f.label :creation_date %><%= f.text_field :creation_date %></div></div>
      <div class="ui-block-c"><div data-mini="true"><%= f.label :modification_date %><%= f.text_field :modification_date %></div></div>		
    </fieldset>
    <fieldset class="ui-grid-solo">
      <div class="ui-block-a"><%= f.submit %></div>
    </fieldset>
  
  </div>
<% end %>

<%= link_to 'Back', project_user_histories_path(@project) %>
